@model IEnumerable<WaiwardDemo.Models.HseqCaseFile>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CaseNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NcrID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CaseNo)
        </td>
        <td>
            @if (item.NcrID == null)
            {
                @Html.DisplayFor(modelItem => item.NcrID)
            }
            else
            {
                @Html.ActionLink(item.NcrID + "", "Details", "Ncrs", new { id = item.NcrID }, null)
            }
            
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.HseqCaseFileID }) |
            @Html.ActionLink("Details", "Details", new { id=item.HseqCaseFileID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.HseqCaseFileID })
        </td>
    </tr>
}

</table>
